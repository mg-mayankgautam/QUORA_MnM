        <style>

            body{
    margin: auto;
    max-width: 100% ;
    font-family: 'Poppins', sans-serif;
    background-color: #F2F2F2;
}
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;600&display=swap");

.navbar{
    display: flex;
    background-color: #1d273d;
    height: 40px;
    justify-content:space-between;
    align-items: center;
    min-height: 80px;
    gap: 30px;
    position: sticky;
    top: 0;
    z-index: 1;
}
.site_name{
    margin: 30px;
    color: white;
    cursor: pointer;
}

.search{
    margin-left: auto;
}

.search_icon{
    vertical-align: middle;
    width: 25px;
    height: 25px;
    padding: 0;
    margin: 0;
}
button.search_question_btn{
    padding: 3px;
    margin: 0;
    width: 33.4px;
    height: 33.4px;
}

.dropp{
    position: relative;
}
.profile{
    margin-right: 30px;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* position: relative;
    display: inline-block; */
}

.dropdown{
    display: flex;
    opacity: 0;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    background-color: #ffffff;
    width: 170px;
    /* max-width: 30%; */
    box-shadow: 5px 12px 16px 6px rgba(0,0,0,0.5);
    /* z-index: 10; */
    border-radius: 5px;
    margin: 0px 0px 0px;
    padding: 20px 20px;
    position: absolute;
    top: calc(100% + 7px);
    right: 7px;
    left: -170px;
    /* top: 10%;
    left: 84%; */
    transform: translateY(-10px) ;
    transition: opacity 150ms ease-in-out, transform 150ms ease-in-out;
    pointer-events: none;
}

.dropp.active > .profile + .dropdown{
    
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
}

.dropdown button{
    width: 140px;
    height: 38px;
    border-radius: 8px;
}
.dropdown .user_img{
    width: 70px;
    height: 70px;
    border-radius: 50%;
}

.user_img{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
}

/* .user_img:hover .dropdown{
    display: block;
    
} */
.username{
    font-size: small;
}

input{
    border: 1px solid #9d9d9d;
    border-radius: 5px;
    padding: 8px 10px;
    margin: 5px 0;
    box-sizing: border-box;
    }
input:hover{
    border: 1px solid #0022ff38 ;
}
input:focus{
    outline: none;
    border: 1px solid #0022ff38 ;
}

.add_question > form{
    display: flex;
    gap: 8px;
    align-items: center;
    flex-grow: 1;
    }

input[class=question_input]{
    flex-grow: 1;
    }

.top_buttons{
    margin:20px 0px;
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
    /* width: 600px; */
    /* max-width: 75%; */
    }

.add_question{
    /* flex-grow: 1; */
    max-width: 75%;
    width: 800px;
    }
    
button{
    align-content: center;
    padding: 8px 8px;
    border-radius: 5px;
    border: 1px solid #9d9d9d;
    cursor: pointer;
    background-color: #1d273d;
    color: white;
    }
button:hover{
    border: 1px solid #ffffff;
}

 {{!-- .questions_display{
    display: flex;
    flex-direction: column;
    gap: 30px;
    /*margin: 30px 0px 50px;*/
    align-items: center;
    }  --}}
    
    .output_div{
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin: 30px 0px 50px;
        align-items: center;
    }

.question{
    width: 800px;
    max-width: 75%;
    display: flex;
    flex-direction: column;
    gap: 20px;
    background-color: white;
    min-height: 100px;
    padding: 10px 15px;
    border-radius: 5px;
     box-shadow: 0 4px 8px 0 rgba(29, 39, 61, 0.2), 0 6px 20px 0 rgba(29, 39, 61, 0.19);
    {{!-- box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); --}}
}
.question:hover{
    box-shadow: 0px 2px 10px 2px rgba(0, 47, 255, 0.2), 0 6px 20px 0 rgba(255, 255, 255, 0.2);
}

.ques_info{
    display: flex;
    gap:30px;
    justify-content: right;
    font-size: small;
    align-items: baseline;
    /* opacity: .75; */
}
.ques_text{
    font-size: medium;
    font-weight: bold;
    margin-bottom: 25px;
}

.question_disp{
    width: 800px;
    max-width: 75%;
    display: flex;
    flex-direction: column;
    gap: 20px;
    background-color: white;
    min-height: 100px;
    /* border: solid 1px #9da5a3; */
    padding: 10px 15px;
    border-radius: 5px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
.questioninfo{
    display: flex;
    gap:30px;
    justify-content: right;
    font-size: small;
    align-items: baseline;
    /* opacity: .75; */
}
.questiontext{
    font-size: medium;
    font-weight: bold;
    margin-bottom: 25px;
}

.drop{
    position: relative;
}

.settings{ 
    /* button */
    background: none;
    border: none;
    color: black;
    padding: 0;
    font-weight: bolder;
    font-size: x-large;
}
.settings:hover{
    border: none;
}

.menu{
    position: absolute;
    /* left: 0; */
    top: calc(100% + .5rem);
    background-color: white;
    padding: .75rem;
    border-radius: .5rem;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.2);
    opacity: 0;
    transform: translateY(-10px) ;
    transition: opacity 150ms ease-in-out, transform 150ms ease-in-out;
    pointer-events: none;
}

.menu button {
    width: 80px;
}
/* use :focus for trials of active class */

.drop.active > .settings + .menu{
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
}

.answer_num{
    font-size: small;
    /* opacity: .75; */
}

.add_answer{
    display: flex;
    align-items: center;
    gap: 5px;
    justify-content: space-between;
}
    .add_answer> form{
        display: flex;
        gap: 5px;
        align-items: center;
    }

    .answers_display{
        display: flex;
        flex-direction: column;
        gap: 25px;
        padding: 20px 0;
    }
    
    .answers_display > h3{
        font-style: italic;
        font-weight: .75rem;
        padding: 0;
        margin: 0;
    }
    
    .answer{
        display: flex;
        flex-direction: column;
        /* min-height: 100px; */
        /*border-bottom: solid 5px #bec4c2;*/
        padding: 0px 15px 30px;
        border-radius: 5px; 
        gap: 15px;
    box-shadow: 0px 4px 0px 0px rgba(0, 47, 255, 0.2);
}
/* .answer:hover{
    box-shadow: 0px 2px 10px 2px rgba(0, 47, 255, 0.2), 0 6px 20px 0 rgba(255, 255, 255, 0.2);
} */
    
    .add_answers > form {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .ans_info{
        display: flex;
        gap:30px;
        justify-content: right;
        font-size: small;
        align-items: baseline;
    }
    
    button.delete_btn{
        padding: 8px 8px;
        border-radius: 5px;
        border: 1px solid #9d9d9d;
    }

        </style>
