<body>

    <div class="navbar">
        <div class="site_name">
           <h1 class="homebtn">Quora</h1> 
        </div>
    
        <div class="search">
             <form action="/searchquestion" method="POST"> 
                <input type="text" name="newquestion" class="ques_input" id="m" placeholder="search anything">
                <button class="search_question_btn"><img class="search_icon" src="/media/search-icon.png" alt="https://w7.pngwing.com/pngs/597/398/png-transparent-forest-lake-computer-icons-inspection-white-wine-search-bar-thumbnail.png"></button>
             </form> 
        </div>

        <div class="dropp" data-dropdown>
            <div class="profile" >
                <img class="user_img" src="https://www.svgrepo.com/show/382095/female-avatar-girl-face-woman-user-4.svg" alt="Avatar" data-dropdown_btn>
                <div class="username">{{username}}</div>
            </div>  
            <div class="dropdown">
                <img class="user_img" src="https://www.svgrepo.com/show/382095/female-avatar-girl-face-woman-user-4.svg" alt="Avatar">
                <div>Hi {{username}}!</div>
                <button class="my_questions_btn">My Questions</button>
                <button>Settings</button>
                <form action="/homepage/logout" method="GET">
                    <button class="signout">Sign Out</button>
                </form>
            </div>
        </div>

    </div>
    
    <div class="top_buttons">
        <!-- <button class="back_btn">back</button> -->
        
        <div class="add_question">
            <form action="/homepage/addquestion" method="POST">
                <input type="text" name="question" class="question_input" id="m" placeholder="POST A QUESTION">
                <button class="add_question_btn">post</button>
            </form>
        </div>
    </div>

  
    <div class="output_div">

        <div class="questions_display">

           
            
        </div>
    
    </div>
    
    

    <script src="/scripts/homepage.js"></script>

</body>

</html>
